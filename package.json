{
  "name": "ap2-payment-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "AP2-Native Agent Payment Gateway - Policy-driven payment routing system",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/api",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:all": "npm run dev --workspaces --if-present",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "npm run build --workspace=apps/api",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "start": "npm run start --workspace=apps/api",
    "start:frontend": "npm run start --workspace=apps/frontend",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --composite false",
    "typecheck:all": "npm run typecheck && npm run typecheck --workspace=apps/frontend",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:generate": "npm run generate --workspace=packages/database",
    "db:migrate": "npm run migrate:dev --workspace=packages/database",
    "db:migrate:deploy": "npm run migrate:deploy --workspace=packages/database",
    "db:seed": "npm run seed --workspace=packages/database",
    "db:studio": "npm run studio --workspace=packages/database"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
